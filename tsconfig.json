{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["ES2018"],
    "module": "NodeNext",
    "rootDir": "./",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node-modules"]
}
